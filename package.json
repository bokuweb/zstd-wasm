{
  "name": "@bokuweb/zstd-wasm",
  "version": "0.0.13",
  "repository": "ssh://git@github.com/bokuweb/zstd-wasm.git",
  "author": "<bokuweb12@gmail.com>",
  "license": "MIT",
  "main": "dist/common/index.node.js",
  "browser": "dist/web/index.web.js",
  "types": "dist/web/index.web.d.ts",
  "scripts": {
    "largefile": "yes \"Hello\" | head -n 40000000 > ./test/large-file",
    "tsc": "tsc -p tsconfig.json --skipLibCheck",
    "copy:wasm:web": "cp -r ./lib/wasm dist/web/wasm",
    "copy:wasm:common": "cp -r ./lib/wasm dist/common/wasm",
    "copy:wasm:esm": "cp -r ./lib/wasm dist/esm/wasm",
    "tsc:web": "tsc -p tsconfig.web.json --skipLibCheck",
    "tsc:common": "tsc -p tsconfig.node.common.json --skipLibCheck",
    "tsc:esm": "tsc -p tsconfig.node.esm.json --skipLibCheck",
    "build:web": "npm run tsc:web && npm run copy:wasm:web",
    "build:common": "npm run tsc:common && npm run copy:wasm:common",
    "build:esm": "npm run tsc:esm && npm run copy:wasm:esm",
    "build:deno": "node tools/deno.js",
    "rename": "renamer --dry-run --find \"/dist/esm/*.js$/\" --replace mjs",
    "bundle": "webpack",
    "serve": "webpack-dev-server",
    "benchmark": "npx ts-node ./benchmark/index.ts",
    "copy": "cp ./zstd/zstd.wasm ./lib/wasm && cp ./zstd/zstd.js ./lib/wasm",
    "combine:zstd": "cd zstd/build/single_file_libs && bash ./create_single_file_library.sh && cp zstd.c ../../zstd.c",
    "build:js": "npm run clean && npm run build:web && npm run build:common && npm run build:esm",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build:js",
    "build:wasm": "docker run --rm -v $(pwd):/src -u $(id -u):$(id -g) emscripten/emsdk emcc zstd.c -flto -o ./zstd.js -O3 --memory-init-file 0 --post-js export_module.js -s EXPORTED_FUNCTIONS=\"['_ZSTD_isError', '_ZSTD_getFrameContentSize', '_ZSTD_getErrorName', '_ZSTD_decompress', '_ZSTD_compress', '_ZSTD_compressBound', '_malloc', '_free']\" -s EXPORTED_RUNTIME_METHODS=\"['cwrap']\" -s FILESYSTEM=0 -s ALLOW_MEMORY_GROWTH=1",
    "build": "npm run build:was && npm run build:js",
    "test": "npm run largefile && jest && rm ./test/large-file"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/benchmark": "2.1.1",
    "@types/jest": "26.0.24",
    "@types/node": "15.6.1",
    "benchmark": "2.1.4",
    "copy-webpack-plugin": "6.4.1",
    "file-loader": "6.2.0",
    "glob-all": "3.2.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "renamer": "^3.2.1",
    "text-encoding": "0.7.0",
    "ts-jest": "27.0.4",
    "ts-loader": "8.3.0",
    "typescript": "4.3.5",
    "webpack": "4.46.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.2"
  },
  "dependencies": {},
  "exports": {
    "node": "./dist/common/index.node.js",
    "require": "./dist/common/index.node.js",
    "browser": "./dist/web/index.web.js",
    "default": "./dist/common/index.node.js"
  }
}
